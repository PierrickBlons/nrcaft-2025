generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://localhost:5432/mydb"
}

model Subscriber {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  websiteUri   String
  registeredAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
  survey       Survey[]
}

model Survey {
  id           String     @id @default(uuid())
  status       String
  startDate    DateTime
  endDate      DateTime
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  subscriberId String
  subscriber   Subscriber @relation(fields: [subscriberId], references: [id])
  feedbacks    Feedback[]
}

model EndUser {
  id        String     @id @default(uuid())
  email     String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  feedback  Feedback[]
}

model Feedback {
  id        String   @id @default(uuid())
  rating    Int
  endUserId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  surveyId  String
  survey    Survey   @relation(fields: [surveyId], references: [id])
  endUser   EndUser  @relation(fields: [endUserId], references: [id])

  @@unique([endUserId, surveyId])
}
